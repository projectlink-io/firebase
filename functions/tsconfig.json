{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitReturns": true,
    "esModuleInterop": true,
    "noImplicitAny": false,
    "noUnusedLocals": false,
    "outDir": "lib",
    "sourceMap": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "es2017",
    "isolatedModules": false
  },
  "compileOnSave": true,
  "include": [
    "src/index.ts",
    "test/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}