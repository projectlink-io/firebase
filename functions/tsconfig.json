{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitReturns": true,
    "esModuleInterop": true,
    "noImplicitAny": false,
    "noUnusedLocals": true,
    "outDir": "../dist",
    "sourceMap": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "es2017",
    "isolatedModules": false
  },
  "compileOnSave": true,
  "include": [
    "./index.ts"
  ]
}